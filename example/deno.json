{
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.6.0",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/path": "jsr:@std/path@^1.1.2",
    "drizzle-orm": "npm:drizzle-orm@^0.44.5",
    "drizzle-zod": "npm:drizzle-zod@^0.8.3",
    "postgres": "npm:postgres@^3.4.7"
  },
  "compilerOptions": {
    "strict": true
  },
  "tasks": {
    "generate": "deno run -A ../src/cli.ts --modelsPath ./models --outputPath ./generated",
    "db:init": "deno run -A generated/db/initialize-database.ts",
    "run:example": "deno run -A ./example.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
