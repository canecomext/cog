{
  "name": "IDCard",
  "tableName": "id_card",
  "fields": [
    {
      "name": "id",
      "type": "uuid",
      "primaryKey": true,
      "defaultValue": "gen_random_uuid()",
      "required": true
    },
    {
      "name": "employeeId",
      "type": "uuid",
      "unique": true,
      "required": true,
      "references": {
        "model": "Employee",
        "field": "id",
        "onDelete": "CASCADE"
      }
    },
    {
      "name": "cardNumber",
      "type": "string",
      "maxLength": 20,
      "required": true,
      "unique": true
    },
    {
      "name": "issueDate",
      "type": "date",
      "required": true
    },
    {
      "name": "expiryDate",
      "type": "date",
      "required": true
    }
  ],
  "relationships": [
    {
      "type": "oneToOne",
      "name": "employee",
      "target": "Employee",
      "foreignKey": "employeeId"
    }
  ],
  "timestamps": true
}
