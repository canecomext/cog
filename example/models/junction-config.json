{
  "manyToMany": [
    {
      "through": "post_tags",
      "fields": [
        {
          "name": "isPrimary",
          "type": "boolean",
          "defaultValue": false,
          "required": false,
          "description": "Indicates if this tag is a primary tag for the post"
        },
        {
          "name": "sortOrder",
          "type": "integer",
          "defaultValue": 0,
          "required": false,
          "description": "Order for displaying tags on the post"
        }
      ],
      "indexes": [
        {
          "name": "idx_post_tags_primary",
          "fields": ["isPrimary"]
        }
      ]
    }
  ]
}