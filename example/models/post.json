{
  "name": "Post",
  "tableName": "posts",
  "description": "Blog post model demonstrating relationships",
  "fields": [
    {
      "name": "id",
      "type": "uuid",
      "primaryKey": true,
      "defaultValue": "gen_random_uuid()",
      "required": true
    },
    {
      "name": "title",
      "type": "string",
      "maxLength": 500,
      "required": true,
      "index": true
    },
    {
      "name": "slug",
      "type": "string",
      "maxLength": 500,
      "unique": true,
      "required": true
    },
    {
      "name": "content",
      "type": "text",
      "required": true
    },
    {
      "name": "excerpt",
      "type": "text"
    },
    {
      "name": "authorId",
      "type": "uuid",
      "required": true,
      "references": {
        "model": "User",
        "field": "id",
        "onDelete": "CASCADE",
        "onUpdate": "CASCADE"
      }
    },
    {
      "name": "categoryId",
      "type": "uuid",
      "references": {
        "model": "Category",
        "field": "id",
        "onDelete": "SET NULL"
      }
    },
    {
      "name": "publishedAt",
      "type": "date"
    },
    {
      "name": "viewCount",
      "type": "integer",
      "defaultValue": 0
    },
    {
      "name": "metadata",
      "type": "jsonb"
    }
  ],
  "relationships": [
    {
      "type": "manyToOne",
      "name": "author",
      "target": "User",
      "foreignKey": "authorId"
    },
    {
      "type": "manyToOne",
      "name": "category",
      "target": "Category",
      "foreignKey": "categoryId",
      "nullable": true
    },
    {
      "type": "oneToMany",
      "name": "comments",
      "target": "Comment",
      "foreignKey": "postId"
    },
    {
      "type": "manyToMany",
      "name": "tags",
      "target": "Tag",
      "through": "post_tags",
      "foreignKey": "post_id",
      "targetForeignKey": "tag_id"
    }
  ],
  "timestamps": true,
  "softDelete": true
}