{
  "name": "Comment",
  "tableName": "comments",
  "fields": [
    {
      "name": "id",
      "type": "uuid",
      "primaryKey": true,
      "defaultValue": "gen_random_uuid()",
      "required": true
    },
    {
      "name": "content",
      "type": "text",
      "required": true
    },
    {
      "name": "userId",
      "type": "uuid",
      "required": true,
      "references": {
        "model": "User",
        "field": "id",
        "onDelete": "CASCADE"
      }
    },
    {
      "name": "postId",
      "type": "uuid",
      "required": true,
      "references": {
        "model": "Post",
        "field": "id",
        "onDelete": "CASCADE"
      }
    }
  ],
  "relationships": [
    {
      "type": "manyToOne",
      "name": "user",
      "target": "User",
      "foreignKey": "userId"
    },
    {
      "type": "manyToOne",
      "name": "post",
      "target": "Post",
      "foreignKey": "postId"
    }
  ],
  "timestamps": true
}