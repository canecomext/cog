{
  "name": "Location",
  "tableName": "locations",
  "description": "Location model demonstrating PostGIS types and self-referential relationships",
  "fields": [
    {
      "name": "id",
      "type": "uuid",
      "primaryKey": true,
      "defaultValue": "gen_random_uuid()",
      "required": true
    },
    {
      "name": "name",
      "type": "string",
      "maxLength": 255,
      "required": true,
      "index": true
    },
    {
      "name": "description",
      "type": "text"
    },
    {
      "name": "point",
      "type": "point",
      "srid": 4326,
      "required": true,
      "index": true
    },
    {
      "name": "boundary",
      "type": "polygon",
      "srid": 4326
    },
    {
      "name": "route",
      "type": "linestring",
      "srid": 4326
    },
    {
      "name": "area",
      "type": "geometry",
      "geometryType": "POLYGON",
      "srid": 4326
    },
    {
      "name": "region",
      "type": "geography",
      "geometryType": "MULTIPOLYGON",
      "srid": 4326
    },
    {
      "name": "altitude",
      "type": "decimal",
      "precision": 10,
      "scale": 2
    },
    {
      "name": "population",
      "type": "bigint"
    },
    {
      "name": "properties",
      "type": "jsonb"
    },
    {
      "name": "parentId",
      "type": "uuid",
      "references": {
        "model": "Location",
        "field": "id",
        "onDelete": "CASCADE",
        "onUpdate": "CASCADE"
      }
    }
  ],
  "relationships": [
    {
      "type": "manyToOne",
      "name": "parent",
      "target": "Location",
      "foreignKey": "parentId",
      "nullable": true
    },
    {
      "type": "oneToMany",
      "name": "children",
      "target": "Location",
      "foreignKey": "parentId"
    }
  ],
  "indexes": [
    {
      "fields": ["point"],
      "type": "gist",
      "name": "idx_locations_point_gist"
    },
    {
      "fields": ["boundary"],
      "type": "gist",
      "name": "idx_locations_boundary_gist"
    }
  ],
  "timestamps": true
}