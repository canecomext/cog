{
  "name": "User",
  "tableName": "users",
  "description": "User account model with all features",
  "fields": [
    {
      "name": "id",
      "type": "uuid",
      "primaryKey": true,
      "defaultValue": "gen_random_uuid()",
      "required": true
    },
    {
      "name": "email",
      "type": "string",
      "maxLength": 255,
      "unique": true,
      "required": true,
      "index": true
    },
    {
      "name": "username",
      "type": "string",
      "maxLength": 50,
      "unique": true,
      "required": true,
      "index": true
    },
    {
      "name": "fullName",
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    {
      "name": "passwordHash",
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    {
      "name": "isActive",
      "type": "boolean",
      "defaultValue": true,
      "required": true
    },
    {
      "name": "age",
      "type": "integer"
    },
    {
      "name": "balance",
      "type": "decimal",
      "precision": 10,
      "scale": 2
    },
    {
      "name": "metadata",
      "type": "jsonb"
    },
    {
      "name": "tags",
      "type": "text",
      "array": true
    },
    {
      "name": "lastLoginAt",
      "type": "date"
    },
    {
      "name": "loginCount",
      "type": "bigint",
      "defaultValue": 0
    }
  ],
  "relationships": [
    {
      "type": "oneToMany",
      "name": "posts",
      "target": "Post",
      "foreignKey": "authorId"
    },
    {
      "type": "oneToMany",
      "name": "comments",
      "target": "Comment",
      "foreignKey": "userId"
    },
    {
      "type": "oneToOne",
      "name": "profile",
      "target": "UserProfile",
      "foreignKey": "userId"
    },
    {
      "type": "manyToMany",
      "name": "roles",
      "target": "Role",
      "through": "user_roles",
      "foreignKey": "user_id",
      "targetForeignKey": "role_id"
    }
  ],
  "indexes": [
    {
      "fields": ["email", "isActive"],
      "name": "idx_users_email_active"
    }
  ],
  "timestamps": true,
  "softDelete": true
}